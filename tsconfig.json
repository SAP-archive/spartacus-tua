{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "tua-spa": [
        "dist/tua-spa"
      ],
      "tua-spa/*": [
        "dist/tua-spa/*"
      ],
      "application": [
        "dist/application"
      ],
      "application/*": [
        "dist/application/*"
      ],
      "b2bapplication": [
        "dist/b2bapplication"
      ],
      "b2bapplication/*": [
        "dist/b2bapplication/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableIvy": true
  }
}
